#include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<"enter the range\n";
    cin>>n;
    int a[n],i,j,flag=0,key;
    cout<<"entert he elements\n";
    for(i=0;i<n;i++)
    {
        cin>>a[i];
    }
    cout<<"enter the key";
    cin>>key;
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            if(a[i]-a[j]==key)
            {
                flag++;
            }
        }
    }
    cout<<"the pairs are";
    cout<<flag;
    return 0;
}
